  "paths": {
    "/blogs": {
      "get": {
        "description": "ブログ一覧取得",
        "operationId": "findBlogs",
        "tags": [
          "blog"
        ],
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "取得件数を指定します。デフォルト値は10です。",
            "required": false,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "offset",
            "in": "query",
            "description": "何件目から取得するかを指定します。デフォルト値は0です。",
            "required": false,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "orders",
            "in": "query",
            "description": "取得するコンテンツの並び替えを行います。並び替え対象とするフィールド名をorders=publishedAtといった形で指定してください。複数のフィールドを並び替え対象とする場合はorders=publishedAt,-updatedAtのようにカンマ区切りで指定が可能です。",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "q",
            "in": "query",
            "description": "コンテンツの全文検索を行います。",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "fields",
            "in": "query",
            "description": "コンテンツの中で取得する要素を指定します。fields=title,main_image,updatedAt,author.nameのようにカンマ区切りで値を記載してください。",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "filters",
            "in": "query",
            "description": "公開されているコンテンツの中から取得するコンテンツを絞り込みます。",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "/blogs のレスポンス",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Blog"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {}
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "text/plain": {
                "schema": {}
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "text/plain": {
                "schema": {}
              }
            }
          }
        }
      }
    },
