  "components": {
    "schemas": {
      "RelationalBlog": {
        "$ref": "#/components/schemas/Blog"
      },
      "Blog": {
        "type": "object",
        "required": [
          "id",
          "createdAt",
          "updatedAt",
          "publishedAt",
          "title",
          "content",
          "category"
        ],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "example": "8xklfunou"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "2020-08-30T10:33:03.318Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "example": "2020-08-30T10:33:03.318Z"
          },
          "publishedAt": {
            "type": "string",
            "format": "date-time",
            "example": "2020-08-30T10:33:03.318Z"
          },
          "title": {
            "type": "string",
            "example": "ブログのタイトル"
          },
          "content": {
            "type": "string",
            "example": "<h2 id=\"hee21095236\">abc</h2><p>aiueo<br>かきくけこ<br></p><h4 id=\"hee21095236\">abc</h4>"
          },
          "category": {
            "type": "object",
            "$ref": "#/components/schemas/Category"
          },
          "tags": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Tag"
            }
          }
        }
      },
      "Category": {
        "type": "object",
        "required": [
          "id",
          "createdAt",
          "updatedAt",
          "publishedAt",
          "categoryID",
          "name"
        ],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "example": "wsthdz5oe"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "2020-08-30T10:33:03.318Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "example": "2020-08-30T10:33:03.318Z"
          },
          "publishedAt": {
            "type": "string",
            "format": "date-time",
            "example": "2020-08-30T10:33:03.318Z"
          },
          "categoryID": {
            "type": "string",
            "format": "byte",
            "example": "cat"
          },
          "name": {
            "type": "string",
            "example": "猫"
          }
        }
      },
      "Tag": {
